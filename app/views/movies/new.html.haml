%h1 Movies#new
%p Find me in app/views/movies/new.html.haml

= form_for @movie do |f|
  = f.label :title
  = f.text_field :title
  = f.label :release_year
  = f.select :release_year, (1900..2009).to_a.map(&:to_s)
  -# = f.label "Comedy"
  -# = check_box "genre", "comedy", id: "Comedy"
  - @genres.each do |genre|
    = genre.name
    = check_box_tag "#{genre.name}", genre.id
  = f.submit "Save"

